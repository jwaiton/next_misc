arguments = $(INFILE) $(OUTFILE) $(REBIN) $(Process) $(RUN) $(TIMESTAMP) $(LDC)

max_idle = 100

should_transfer_files = yes
when_to_transfer_output = ON_EXIT

queue 1700 

