executable      = bin/fedora.sh 
request_memory  = 4G
request_cpus    = 1
request_disk    = 5G
initialdir	= $ENV(HOME)/scripts

RUN=15616
LDC=1
TIMESTAMP=040925
REBIN=100000
TRIGGER=1

INFILE=/gluster/data/next/files/TOPOLOGY_John/N100_data/$(RUN)/sophronia/trigger$(TRIGGER)/ldc$(LDC)/
OUTFILE=/gluster/data/next/files/TOPOLOGY_John/N100_data/$(RUN)/sophronia/$(TIMESTAMP)/ldc$(LDC)/


output          = out/fedora/out/fedora_R$(RUN)_LDC$(LDC).$(ClusterId)-$(Process)-$(TIMESTAMP).out
error           = out/fedora/err/fedora_R$(RUN)_LDC$(LDC).$(ClusterId)-$(Process)-$(TIMESTAMP).err
